{
  "name": "vanilla-drag-movable",
  "version": "1.0.0",
  "description": "Drag and move behavior for DOM elements",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": "https://github.com/tai2/vanilla-drag-movable",
  "scripts": {
    "build": "tsc",
    "build:demo": "cd demo && yarn build",
    "build:both": "run-s build build:demo",
    "watch": "tsc -w",
    "watch:demo": "cd demo && yarn watch",
    "watch:both": "run-p watch watch:demo",
    "prepare": "npm run build",
    "format": "prettier --write src/*.ts demo/*.{ts,html}",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Taiju Muto <hello@tai2.net>",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  }
}
